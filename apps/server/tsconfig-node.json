{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types"],
    "types": ["node", "express"]
  },
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node"
  }
}